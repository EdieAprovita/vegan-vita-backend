#!/bin/bash

# Pre-commit hook for VeganVita Backend

echo "üîç Running pre-commit checks..."

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if PNPM is installed
if ! command -v pnpm &> /dev/null; then
    echo -e "${RED}‚ùå PNPM is not installed${NC}"
    exit 1
fi

# Get staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=d | grep -E '\.(ts|tsx|js|jsx)$')

if [ -z "$STAGED_FILES" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  No TypeScript files to check${NC}"
    exit 0
fi

echo -e "${YELLOW}üì¶ Running ESLint...${NC}"
pnpm run lint --staged
if [ $? -ne 0 ]; then
    echo -e "${RED}‚ùå ESLint failed${NC}"
    exit 1
fi

echo -e "${YELLOW}üé® Checking code format...${NC}"
pnpm run format -- --check $STAGED_FILES
if [ $? -ne 0 ]; then
    echo -e "${RED}‚ùå Code formatting issues found${NC}"
    echo "Run: pnpm run format"
    exit 1
fi

echo -e "${GREEN}‚úÖ Pre-commit checks passed!${NC}"
exit 0
