#!/bin/bash

# Commit-msg hook for conventional commits

COMMIT_MSG_FILE=$1
COMMIT_MSG=$(cat $COMMIT_MSG_FILE)

# Pattern: type(scope): subject
PATTERN="^(feat|fix|docs|style|refactor|perf|test|chore|ci|build|revert)(\(.+\))?!?:\ .{1,}"

if ! echo "$COMMIT_MSG" | grep -qE "$PATTERN"; then
    echo "‚ùå Invalid commit message format!"
    echo ""
    echo "Expected format: type(scope): message"
    echo ""
    echo "Types: feat, fix, docs, style, refactor, perf, test, chore, ci, build, revert"
    echo ""
    echo "Example: feat(auth): add JWT strategy"
    echo "Example: fix: resolve database connection issue"
    exit 1
fi

exit 0
